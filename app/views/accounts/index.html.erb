<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Balance</th>
      <th>Status</th>
      <th>Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      
    <% @accountable.accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.balance %></td>
        <td><%= account.status %></td>
        <td><%= account.parent_id %></td>
        <% if person_signed_in? %>
          <td><%= link_to 'View', account_path(account) %></td>
          <td><%= link_to 'Edit', edit_account_path(account) %></td>
          <td><%= link_to 'Destroy', account_path(account), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to 'Show', legal_person_account_path(account) %></td>
          <td><%= link_to 'Edit', edit_legal_person_account_path(account) %></td>
          <td><%= link_to 'Destroy', legal_person_account_path(account), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>  
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if person_signed_in? %>
  <%= link_to 'New Account', new_person_account_path, class: "btn btn-link" %>
<% else %>
  <%= link_to 'New Account', new_legal_person_account_path, class: "btn btn-link" %>
<% end %>



