<p id="notice"><%= notice %></p>

<h2>Account Transactions</h2>

<table class= "table table-bordered">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Transaction type</th>
      <th>Transaction number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= number_to_currency transaction.amount_in_dollars %></td>
        <td><%= transaction.type %></td>
        <td><%= transaction.number %></td>
        <td>
        <div class="dropdown">
            <a class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Action
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <li> <%= link_to 'View', transaction_path(transaction) %></li>
              <li> <%= link_to 'Edit', edit_transaction_path(transaction) %></li>
              <li><%= link_to 'Destroy', transaction_path(transaction), method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Make a New Account Transaction', new_account_transaction_path %>
